{
  "name": "linkindin-ui-server",
  "version": "1.0.0",
  "description": "Static file server for LinkinDin frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd ../frontend && npm run build && cp -r dist/* ../ui-server/public/",
    "deploy": "chmod +x deploy.sh && ./deploy.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}